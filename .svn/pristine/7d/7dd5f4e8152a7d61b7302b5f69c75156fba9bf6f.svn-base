.validation-list {
padding-left: 25px;
}
.validation-list > li {
display: block;
}
li:before {
font-family: 'Glyphicons Halflings';
font-size: 8px;
float: left;
margin-top: -10px;
margin-left: -17px;
}
.error {
color: red;
font-size: 8px;
margin-top: 1px;
}
.error:before {
content: "\e014";
color: red;
font-size: 8px;
margin-top: 1px;
}
.success {
color: green;
font-size: 8px;
margin-top: 1px;
}
.success:before {
content: "\e013";
color: green;
font-size: 8px;
margin-top: 1px;
}